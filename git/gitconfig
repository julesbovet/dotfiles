[color]
    ui = true
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = blue reverse
    local = green
    remote = yellow

[color "diff"]
    meta = blue
    frag = yellow
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = red

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    lo = log --all --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[user]
    name = Jules Bovet
    email = jules.bovet@gmail.com

[push]
    default = current
